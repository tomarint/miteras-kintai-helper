{
<% if (browser === 'firefox') { -%>
  "manifest_version": 2,
<% } else { -%>
  "manifest_version": 3,
<% } -%>
  "name": "__MSG_extName__",
  "version": "<%= version %>",
<% if (browser !== 'firefox') { -%>
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "__MSG_extName__"
  },
<% } -%>
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
<% if (browser === 'firefox') { -%>
  "browser_specific_settings": {
    "gecko": {
      "id": "{9d30ded4-39c1-4476-95e8-87c2ce826b9a}"
    }
  },
<% } -%>
  "content_scripts": [
    {
      "matches": [
        "https://kintai.miteras.jp/*/work-condition"
      ],
      "js": [
        "content_event.js"
      ]
    },
    {
      "matches": [
        "https://kintai.miteras.jp/*"
      ],
      "js": [
        "content_style.js"
      ]
    }
  ],
<% if (browser === 'firefox') { -%>
  "background": {
    "scripts": [
      "background.js"
    ]
  },
<% } else { -%>
  "background": {
    "service_worker": "background.js"
  },
<% } -%>
<% if (browser === 'firefox') { -%>
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
<% } else { -%>
  "options_page": "options.html",
<% } -%>
<% if (browser !== 'firefox') { -%>
  "host_permissions": [
    "https://kintai.miteras.jp/*/work-condition"
  ],
<% } -%>
  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ]
}